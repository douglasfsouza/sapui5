<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
	xmlns:smartForm="sap.ui.comp.smartform"
	xmlns:smartField="sap.ui.comp.smartfield"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" 
>
	<Dialog
        id="DialogTransInvoice"
        title="Faturar"
		contentHeight="30%"
	 	contentWidth="44%"		
	>
		<customHeader>
			<Bar
				design="Auto"
				titleAlignment="None"
			>
				<contentLeft>
					<Button
						icon="sap-icon://alert"
						text="{= ${notifications>/}.length }"
						visible="{= ${notifications>/}.length > 0 }"
						type="Emphasized"
						press="_onMessagePopoverPress" 
					/>
				</contentLeft>
				<contentMiddle>
					<Title
						level="Auto"
						text="Faturar"
						textAlign="Initial"
						titleStyle="Auto"
						width=""
						wrapping="false"
						wrappingType="Normal"
					>
					</Title>
				</contentMiddle>
				<contentRight>
					<!--sap.ui.core.Control-->
				</contentRight>
			</Bar>
		</customHeader>

		<content>
			<smartForm:SmartForm 
				id="TransInvoiceNotifyEdit"				
				editable="true"
				entityType="TransExchangeWarehouseWarnNotifyService"
				useHorizontalLayout="false"
			>
				<smartForm:layout>
					<smartForm:Layout  columnsM="1" columnsL="1"  columnsXL="1"  singleGroupFullSize="false" labelSpanL="3" labelSpanM="3"/>
				</smartForm:layout>		

				<smartForm:Group label=""  id="InvoiceNotify">
					<smartForm:GroupElement>
						<smartField:SmartField  value="{U_VSCARDCODE}" />
					</smartForm:GroupElement>	
                    <smartForm:GroupElement>
						<smartField:SmartField enabled="false" value="{CardName}" />
					</smartForm:GroupElement>
					<smartForm:GroupElement>
						<smartField:SmartField  value="{U_VSEVENTCODE_Descr}" />
					</smartForm:GroupElement>	
				</smartForm:Group>
			</smartForm:SmartForm>
		</content>

		<beginButton>
			<Button 
				type="Accept" 
				text="Confirmar" 
				press="Invoice_OnSave" 
				enabled="true"
			/>
		</beginButton>

		<endButton>
			<Button type="Reject" text="Cancelar" press="Invoice_OnClose" />
		</endButton>

    </Dialog>
</c:FragmentDefinition>